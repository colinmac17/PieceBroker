<div class="container profile-container">
    {{!--CAN WE ADD THE PERSON'S NAME HERE?--}}
    <h4 class="center">Welcome back {{user.first_name}}!</h4>
    

    {{!--User Info Area--}}
<div class="row">
    <div class="col s6">
        <ul class="collection with-header">
            <li class="collection-header"><h4>My Info</h4></li>
            <li class="collection-item"><i class="material-icons left">account_circle</i><span id="userEmail">{{user.email}}</span></li>
            <li class="collection-item"><i class="material-icons left">security</i><span id="password">Password</span></li>
        </ul>
    </div>
</div>

    {{!--Table--}}
    <div class="row">
        <table class="responsive-table profile-table col s12 center-align" id="profile-page" method="POST" action="/profile">
            <thead>
                <tr>
                    <th><span class="black-text center-align">Restaurant Name</span></th>
                    <th><span class="black-text center-align">Address</span></th>
                    <th><span class="black-text center-align">Cuisine Type</span></th>
                    <th><span class="black-text center-align">Cost</span></th>
                    <th><span class="black-text center-align">Phone</span></th>
                    <th><span class="black-text center-align">Rating</span></th>
                </tr>
            </thead>
            <tbody class="table-body center-align"> 
                <tr>
                    <td id="restResName"><span class="green-text text-darken-1"></span></td>
                    <td id="restResAddress"><span class="green-text text-darken-1"></span></td>
                    <td id="restResCuisine"><span class="green-text text-darken-1"></span></td>
                    <td id="restResCost"><span class="green-text text-darken-1"></span></td>
                    <td id="restResPhone"><span class="green-text text-darken-1"></span></td>
                    <td id="restResRating"><span class="green-text text-darken-1"></span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

