<div class="container form-container">
    <h2 class="center">Sign up (and skip the argument).</h2>
<div class="row">
    <form class="col s12" id="signup" name="signup" method="post" action="/signup">
      <div class="row">
        <div class="input-field col s6">
          <input name="first_name" id="firstName" type="text" class="validate" required>
          <label for="first_name">First</label>
        </div>
        <div class="input-field col s6">
          <input name="last_name" id="lastName" type="text" class="validate" required>
          <label for="last_name">Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input name="email" id="userEmail" type="email" class="validate" required>
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="userPass" name="password" type="password" class="validate" minlength="6" required>
          <label for="passowrd">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="userCity" name="city" type="text" class="validate" required>
          <label for="userCity">HomeTown</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <button class="btn btn-large btn-register waves-effect waves-light z-depth-2" type="submit">Register
            <i class="material-icons right">done</i>
          </button>
        </div>
      </div>
    </form>
  </div>
</div>