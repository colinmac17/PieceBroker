    <a><img class="carousel-item" data-id="73" src="/images/updatedFood/Mexican.jpeg" alt=""></a>
    <a><img class="carousel-item" data-id="177" src="/images/updatedFood/Sushi.jpeg" alt=""></a>
    <a><img class="carousel-item" data-id="308" src="/images/updatedFood/Vegetarian.jpeg" alt=""></a>
    <a><img class="carousel-item" data-id="70" src="/images/updatedFood/Mediteranian.jpg" alt=""></a>
    <a><img class="carousel-item" data-id="25" src="/images/updatedFood/Chinese.jpeg" alt="">
    <!--This last closing <a> tag must be on a separate line, otherwise it breaks JT 8/27/17-->
    </a>
</div>

<!--3rd screen: Budget preference container-->
<div class="container text-center" id="budget-container">
    <div class="row">
        <div class="col s10 offset-s1 m4 offset-m4">
            <div class="card blue">
                <div class="card-content white-text">
                    <h4 class="center-align">What's your budget?</h4>
                </div>
            </div>
        </div>
    </div>   

    <div class="row center-align" id="moneySigns">
        <button class="btn btn-large green" data-id="cheap">$</button>
        <p class="errMsg" id="cheapErrMsg">Sorry, there are no cheap restaurants for your selection</p>
        
        <button class="btn btn-large green" data-id="medium">$$</button>
        <p class="errMsg" id="medErrMsg">Sorry, there are no medium-priced restaurants for your selection</p>
        
        <button class="btn btn-large green" data-id="expensive">$$$</button>
        <p class="errMsg" id="expErrMsg">Sorry, there are no expensive restaurants for your selection</p>
    </div>    
</div>

<!--error message to show if no restaurants are found in a city-->
<div id="errDiv">
    <h1 class="errMsg"></h1>
</div>

<!--Loader to show between data search-->
<div class="loader center-block text-center"></div>

<div class="preloader-wrapper big active">
    <div class="spinner-layer spinner-blue-only">
        <div class="circle-clipper left">
            <div class="circle"></div>
        </div>
        <div class="gap-patch">
            <div class="circle"></div>
        </div>
        <div class="circle-clipper right">
            <div class="circle"></div>
        </div>
    </div>
</div>

<!--Progress Bar messages to show under Loader-->
<div class="container text-center center-block" id="cuisineProgressMsg">
    <h3 id="cusineMsg"></h3>
    <div class="progress">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="33.33" aria-valuemin="0" aria-valuemax="100" style="width:33.33%">
            33%
        </div>
    </div>
</div>
<div class="container text-center center-block" id="budgetProgressMsg">
    <h3 id="budgetMsg"></h3>
    <div class="progress">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100" style="width:66.67%">
            66%
        </div>
    </div>
</div>
<div class="container text-center center-block" id="hungryProgressMsg">
    <h3 id="hungryMsg"></h3>
    <div class="progress">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width:90%">
            90%
        </div>
    </div>
</div>

